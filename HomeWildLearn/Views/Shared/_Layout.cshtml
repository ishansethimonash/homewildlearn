                    <nav class="site-navigation text-left mr-auto d-none d-lg-block" role="navigation">
                        <ul class="site-menu main-menu js-clone-nav mr-auto ">
                            <li class="active"><a href="@Url.Action("Index", "Home" )" class="nav-link">Home</a></li>
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                    Playfield
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Index", "wildlife_locations" )">Animals Around Me!</a>
                                    <a class="dropdown-item" href="@Url.Action("TestYourKnowledge", "Home" )">Let's Test Your Knowledge</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Animals1" )">Explore Wild-Animals</a>
                                    
                                    <a class="dropdown-item" href="@Url.Action("InterestingFacts", "Home" )">Interesting Facts</a>
                                    <a class="dropdown-item" href="@Url.Action("WhereTo", "Home" )">Where to go now? Zoo, forest or park?</a>
                                    
                                </div>
                            </li>
                            @*<li><a href="@Url.Action("Kids", "Home" )" class="nav-link">Kids</a></li>*@
                            <li><a href="@Url.Action("Parents", "Home" )" class="nav-link">Parents</a></li>
                            <li><a href="@Url.Action("Whatsnew", "Home" )" class="nav-link">What's New</a></li>
                            <li><a href="@Url.Action("About", "Home" )" class="nav-link">About Us</a></li>

                        </ul>
                    </nav>
                    
                </div>
            </div>

        </header>

        <div class="">
            @RenderBody()

            <footer class="site-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <h2 class="footer-heading mb-3">Our Motto</h2>
                            <p class="mb-5">"A virtual bridge between you and nature"</p>
                            
                        </div>
                        <div class="col-lg-8 ml-auto">
                            <div class="row">
                                <div class="col-lg-4 ml-auto">
                                    <h2 class="footer-heading mb-4">Site Navigation</h2>
                                    <ul class="list-unstyled">
                                        <li><a href="@Url.Action("Index", "Home" )">Home</a></li>
                                        <li><a href="@Url.Action("Parents", "Home" )">Parents</a></li>
                                        <li><a href="@Url.Action("About", "Home" )">About Us</a></li>
                                        <li><a href="@Url.Action("Whatsnew", "Home" )">What's new</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row pt-5 mt-5 text-center">
                        <div class="col-md-12">
                            <div class="border-top pt-5">
                                <p class="pull-right"><a href="#">Back to top</a></p>
                                <p>&copy;  @DateTime.Now.Year - Wild-HomeLearn &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
